<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="@drawable/corner_maincolor1"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="회원 탈퇴"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:id="@+id/custom_dialog_title"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="정말로 탈퇴하시겠습니까?"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_below="@id/custom_dialog_title"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginBottom="15dp"
        android:id="@+id/custom_dialog_message"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_dialog_message"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_maincolor3"
            android:textColor="@color/mainColor2"
            android:id="@+id/custom_dialog_cancel"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="취소"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_maincolor3"
            android:textColor="@color/mainColor2"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/custom_dialog_okay"
            android:text="확인"/>
    </LinearLayout>



</RelativeLayout>